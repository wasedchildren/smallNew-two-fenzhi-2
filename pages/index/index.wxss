.header-content{
  height: 270rpx;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-shadow: 0 1px 10px rgba(0, 0, 0, .3);
}
.topBar{
  background: #409EDB;
  height:200rpx;
  display: flex;
  align-items: center;
  
}
.topbar-text{
  line-height: 200rpx;
  color: #fff;
  flex: 1;
  margin-left: 40rpx;
  
}
.tab{
  width: 100%;
   display: flex; 
  align-items: center; 
  height: 70rpx;
  justify-content: space-around;
  background: #409EDB;
  
  /* color: #fff;
   float: left;  */
}
  .tab-view{
  flex:1;
  background: #409EDB;
  color: #fff;
    text-align: center;
    font-size: 35rpx;
     line-height: 42rpx; 
    margin: 0 10rpx;
     box-sizing: border-box;
    padding-bottom: 15rpx;
 
} 
.border-b{
  position: relative;
}
.border-b::before{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 50%;
  height: 4rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.body-content{
  margin-top: 270rpx;
}

.head-wrapper{
  position: relative;
  display: flex;
  align-items: center;
  height: 400rpx;
  overflow: hidden;
}

.head-wrapper-br{
  position: absolute;
   top: 0;
   left: 0;
   bottom: 0;
   right: 0;
   margin: auto;
   width: 100%;
   opacity: .2;
}

.wrapper-img{
  position: relative;
  z-index: 1;
  width: 92%;
  height: 85%;
  margin: auto;
  display: flex;
  align-items: center;
  overflow: hidden;
  border-radius: 5rpx;
}
.img-item{
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}
.img-icon{
  position: absolute;
  top: 0;
  right: 0;
  padding: 5rpx 15rpx;
  font-size: 25rpx;
  color: #fff;
  background-color: rgba(255, 0, 0, .4);
  border-radius: 0 0  0 20rpx; 
 }

.img-into{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 25rpx;
 background: linear-gradient(rgba(0, 0, 0, 0),rgba(0, 0, 0, .5)); /* 标准的语法 */
}

.img-title{
  font-size: 35rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.img-desc{
  font-size: 30rpx;
  color: rgba(255, 255, 255, .4);
  margin-bottom: 20rpx;
}

.list-wrapper{
  padding: 0 30rpx;
}

.list-item{
  display: flex;
  height: 200rpx;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.list-item:last-child{
  border-bottom: unset;
}

.list-into {
  flex: 1;
  padding-right: 30rpx
}

.list-title{
  font-size: 35rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.list-desc{
  font-size: 30rpx;
  color: #666;
}

.list-img-wrapper {
  width: 220rpx;
  height: 150rpx;
}
.list-img-wrapper  image {
  border-radius: 5rpx;
  width: 100%;
  height: 100%;
}